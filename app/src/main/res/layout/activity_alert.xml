<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".activities.Alert">

    <RelativeLayout
        android:id="@+id/menu"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="#32000000"

        app:layout_constraintLeft_toLeftOf="parent">


        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/news"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/news" />

        <ImageView
            android:id="@+id/send"

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="65dp"
            android:src="@drawable/checklist" />

        <ImageView
            android:id="@+id/settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="125dp"
            android:src="@drawable/settings" />

        <ImageView
            android:id="@+id/account"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="185dp"
            android:src="@drawable/account" />

    </RelativeLayout>
    <TextView
        android:layout_marginTop="5dp"
        android:text="Новини спорту"
        android:textSize="15dp"
        app:layout_constraintLeft_toRightOf="@+id/menu"
        android:id="@+id/sport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/politic"
        tools:ignore="MissingConstraints"
        android:id="@+id/Ssport"/>
    <TextView
        android:layout_marginTop="5dp"
        android:text="Новини політики"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/sport"
        app:layout_constraintLeft_toRightOf="@+id/menu"
        android:id="@+id/politic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <Switch

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Ssport"
        app:layout_constraintLeft_toRightOf="@+id/politic"
        android:id="@+id/Spolitic"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_marginTop="5dp"
        android:text="Гумор"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/politic"
        app:layout_constraintLeft_toRightOf="@+id/menu"
        android:id="@+id/humor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <Switch

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Spolitic"
        app:layout_constraintLeft_toRightOf="@+id/politic"
        android:id="@+id/Shumor"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_marginTop="5dp"
        android:text="Новини ігор"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/humor"
        app:layout_constraintLeft_toRightOf="@+id/menu"
        android:id="@+id/game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <Switch

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Shumor"
        app:layout_constraintLeft_toRightOf="@+id/politic"
        android:id="@+id/Sgame"
        tools:ignore="MissingConstraints" />



</androidx.constraintlayout.widget.ConstraintLayout>