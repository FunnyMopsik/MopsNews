<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#54FFFFFF"
    android:elevation="8dp"
    app:cardBackgroundColor="#31FFFFFF"
    app:cardCornerRadius="10dp"

    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#31FFFFFF"
        android:padding="15dp">

        <ImageView
            android:id="@+id/newsImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/ic_launcher"></ImageView>

        <TextView
            android:id="@+id/newsHendler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newsImage"
            android:text="hendler"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newsHendler"
            android:text="category"
            android:textColor="@color/black"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="author"
            android:layout_below="@+id/newsHendler"
            android:textColor="@color/black"
            android:textSize="16sp"
            />



        <TextView
            android:id="@+id/link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/newsHendler"
            android:text="Visit source"
            android:textColor="#000"
            android:textSize="15sp"
            android:visibility="gone" />





    </RelativeLayout>


</androidx.cardview.widget.CardView>